package java_practise;

import java.util.Scanner;

public class PrintIntegers {

	public static void main(String[] args) {


		Scanner sc = new Scanner(System.in);
		
		System.out.println("Please Enter the Even Numbers till");
		
		int a = sc.nextInt();
		int sum =0, count=0;
		
		for (int i=0;i<=a;i++)
			if((i%2)==0)
		{
			System.out.println(i);
			sum = sum+i;
			count++;
		}
		
		float avg = sum/count;
		System.out.println("The Average of Even Numbers are: "+avg);

	}

}
